{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}


<div class="container">
    <h1 class="title p-1 text-center"> {{controller_name}}!</h1>
     
{{form_start(form)}}
    <div class="row">
        <div class="col-md-4">
        {{form_row(form.username)}}
        </div>
        <div class="col-md-4">
             {{form_row(form.lastname)}}
        </div>
        <div class="col-md-4">
             {{form_row(form.firstname)}}
        </div>
        
    </div>
    <div class="row">
        <div class="col-12">
             {{form_row(form.email)}}
        </div>
        <div class="col-12">
            {{form_row(form.password)}}
        </div>
        <div class="col-12">
            {{form_row(form.passwordConfirm)}}
        </div>
    </div>
        
        <button class="btn btn-success">S'inscrire</button>
     {{form_end(form)}}
</div>
{% endblock %}
